<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> <!-- Set height to wrap_content -->

    <ImageView
        android:id="@+id/imageViewActivity"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/activity_image_desc"
        android:src="@drawable/cinema_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" /> <!-- Reduced margin -->

    <TextView
        android:id="@+id/textViewActivityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewActivity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" /> <!-- Adjusted margin -->

    <TextView
        android:id="@+id/textViewActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textViewActivityName"
        app:layout_constraintTop_toBottomOf="@+id/textViewActivityName"
        android:layout_marginTop="4dp" /> <!-- Reduced margin -->

</androidx.constraintlayout.widget.ConstraintLayout>
